.container{
  height:45rpx;
  display:inline-flex;
  flex-direction:row;
  padding:25rpx;
}
.index-container{
  display:flex;
  flex-direction:row;
   /* 设置了flex容器的对齐方式 */
  align-items:baseline;  
 
}
.plain{
  font-size: 30rpx;
}
.index{
  font-size: 55rpx;
  line-height: 55rpx;
  font-weight:800;
  margin-left:8rpx;
}
.line{
  height:45rpx;
  margin-left:14rpx;
  border-left:2px solid  #000;
}
.date-container{
  display:flex;
  flex-direction:column;
  margin-left:16rpx;
  font-weight: 400;
}
.month{
  font-size:22rpx;
  line-height:22rpx;
}
.year{
  font-size:20rpx;
  margin-top:6rpx;
}